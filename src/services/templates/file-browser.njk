{% extends "./base.html" %}

{% block content %}
    <div class="row">
        <div class="col text-center">
            <h2>{{title}}</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-lg-3 col-md-4 col">
            {% include "./information.njk" %}
        </div>
        <div class="col-xl-9 col-lg-9 col-md-8 col file-viewer-link-styling">
            <div class="row">
                <div class="col-xl-3 col-lg-3 col-12">
                    Images ({{images.length}})<br/>
                    {% for image in images %}
                        > <a href="../images/{{image.path.split('/').pop()}}.html">{{image.path.split('/').pop()}}</a><br/>
                    {% else %}
                        No images registered.
                    {% endfor %}
                </div>
                <div class="col-xl-4 col-lg-4 col-12">
                    <div class="row py-4">
                        <div class="col">
                        Media ({{media.length}})<br/>
                            {% for item in media %}
                                {% if item.type === 'audio' %}
                                    > <a href="../media/{{item.name}}.html">{{item.name}} ({{item.type}})</a><br/>
                                {% endif %}
                            {% endfor %}
                            {% for item in media %}
                                {% if item.type === 'video' %}
                                    > <a href="../media/{{item.name}}.html">{{item.name}} ({{item.type}})</a><br/>
                                {% endif %}
                            {% endfor %}
                            {% if media.length === 0 %}
                                No media registered.
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-12">
                    <div class="row py-4">
                        <div class="col">
                            Documents ({{documents.length}}) <br/>
                            {% for document in documents %}
                                > <a href="../documents/content/{{document.name}}" download>{{document.name}}</a><br/>
                            {% else %}
                                No documents registered.
                            {% endfor %}
                        </div>
                    </div>
                    {# <div class="row">
                        <div class="col">
                            Transcriptions ({{transcriptions.length}}) <br/>
                            {% for transcription in transcriptions %}
                                > <a href="../transcriptions/{{transcription.name}}.html">{{transcription.name}}</a><br/>
                            {% else %}
                                No transcriptions registered.
                            {% endfor %}
                        </div>
                    </div> #}
                </div>
            </div>
        </div>
    </div>
{% endblock %}