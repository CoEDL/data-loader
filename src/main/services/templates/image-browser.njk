{% extends "./base.html" %}

{% block content %}
    <div class="row">
        <div class="col text-center">
            <h2>{{title}}</h2>
        </div>
    </div>

    <div class="row py-4 file-viewer-link-styling">
        <div class="col-xl-3 col-lg-3 col-md-4 col ml-4">
            {% include "./information.njk" %}
        </div>
        <div class="col">
            <div class="row text-center py-4">
                <div class="col">
                    {% if currentContext.first !== null %}
                        <a type="button" href="{{currentContext.first}}" class="btn px-4">
                            <i class="fas fa-fast-backward fa-lg"></i>
                        </a>
                    {% else %}
                        <a type="button" class="btn px-4">
                            <i class="fas fa-fast-backward fa-lg"></i>
                        </a>
                    {% endif %}

                    {% if currentContext.previous !== null %}
                        <a type="button" href="{{currentContext.previous}}" class="btn px-4">
                            <i class="fas fa-step-backward fa-lg"></i>
                        </a>
                    {% else %}
                        <a type="button" class="btn px-4">
                            <i class="fas fa-step-backward fa-lg"></i>
                        </a>
                    {% endif %}

                    <span style="font-size: 18px;">
                        {{currentContext.meta}}
                    </span>

                    {% if currentContext.next !== null %}
                        <a type="button" href="{{currentContext.next}}" class="btn px-4">
                            <i class="fas fa-step-forward fa-lg"></i>
                        </a>
                    {% else %}
                        <a type="button" class="btn px-4">
                            <i class="fas fa-step-forward fa-lg"></i>
                        </a>
                    {% endif %}

                    {% if currentContext.last !== null %}
                        <a type="button" href="{{currentContext.last}}" class="btn px-4">
                            <i class="fas fa-fast-forward fa-lg"></i>
                        </a>
                    {% else %}
                        <a type="button" class="btn px-4">
                            <i class="fas fa-fast-forward fa-lg"></i>
                        </a>
                    {% endif %}
                </div>
            </div>
            <div class="row text-center">
                <div class="col">
                    <img 
                        style="max-width: 60vw;"
                        src="{{currentContext.name}}" />
                </div>
            </div>
        </div>
    </div> 
{% endblock %}